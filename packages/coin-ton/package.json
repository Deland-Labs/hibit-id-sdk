{
  "name": "@delandlabs/coin-ton",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.umd.cjs"
      }
    },
    "./chains": {
      "import": {
        "types": "./dist/chains.d.ts",
        "default": "./dist/chains.js"
      },
      "require": {
        "types": "./dist/chains.d.ts",
        "default": "./dist/chains.umd.cjs"
      }
    }
  },
  "scripts": {
    "dev": "vite",
    "test": "tsc --noEmit --project ./tsconfig.test.json && vitest",
    "test:ci": "tsc --noEmit --project ./tsconfig.test.json && vitest run",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf dist tsconfig.tsbuildinfo tsconfig.test.tsbuildinfo",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "@delandlabs/coin-base": "workspace:*",
    "@delandlabs/hibit-basic-types": "workspace:*",
    "bignumber.js": "^9.3.1",
    "@ton/core": "^0.61.0"
  },
  "dependencies": {
    "@delandlabs/crypto-lib": "workspace:*",
    "@ton/core": "^0.61.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.0.0",
    "lru-cache": "^11.1.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "globals": "^16.3.0",
    "typescript-eslint": "^8.16.0"
  }
}
