{
  "name": "@delandlabs/coin-base",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.umd.cjs"
      }
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:deps": "cd ../.. && pnpm turbo run build --filter=@delandlabs/coin-base...",
    "build:with-deps": "pnpm build:deps && pnpm build",
    "clean": "rm -rf dist tsconfig.tsbuildinfo tsconfig.test.tsbuildinfo",
    "test": "tsc --noEmit --project ./tsconfig.test.json && vitest run",
    "test:watch": "tsc --noEmit --project ./tsconfig.test.json && vitest",
    "test:ci": "tsc --noEmit --project ./tsconfig.test.json && vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@delandlabs/crypto-lib": "workspace:*",
    "@delandlabs/hibit-basic-types": "workspace:*",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "bignumber.js": "^9.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.16.0",
    "globals": "^16.3.0",
    "lru-cache": "^11.0.0",
    "madge": "^8.0.0",
    "typescript-eslint": "^8.16.0",
    "vite-plugin-dts": "^4.4.2"
  }
}
